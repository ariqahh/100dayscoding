
package day095;

public class Day095 {
     public static double luasLingkaran(double r, double phi) {
        double luas = phi*r*r;
        return (luas);
    }
     
     public static double kelilingLingkaran(double r, double phi) {
         double diameter = 2*r;
         double keliling = phi*diameter;
         return keliling;
        
    }
     
     public static void total (double r, double phi) {
         System.out.println("Luas = phi x r x r");
         System.out.println("Luas = "+phi+" x "+r+" x "+r);
         System.out.println("Luas = "+luasLingkaran(r, phi));
        
    }

    public static void main(String[] args) {
        //luas = phi x r x r
        //keliling = phi x diameter
        // diameter = 2 x r
        final double phi = 3.14; //konstanta atau nilai mutlak
        double  r = 5;
        System.out.println("Mencari luas dan keliling lingkaran");
        total(r, phi);
        System.out.println("Keliling = " + kelilingLingkaran (r,phi));
    }

   
    }
    

