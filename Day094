
package day094;

public class Day094 {
    public static double luasLingkaran(double r, double phi) {
        double luas = phi*r*r;
        return (luas);
    }

    public static void main(String[] args) {
        //luas = phi x r x r
        //keliling = phi x diameter
        // diameter = 2 x r
        final double phi = 3.14; //konstanta atau nilai mutlak
        double luas, keliling, r, diameter;
        r = 5;
        diameter = 2*r;
        
        keliling = phi*diameter;
        System.out.println("Mencari luas dan keliling lingkaran");
        System.out.println("luas = " + luasLingkaran (r, phi));
        System.out.println("Keliling = " + keliling);
    }
    
}
